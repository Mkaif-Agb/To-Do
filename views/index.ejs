<%- include("./partials/header") %>

<nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Todo</a>
    </div>
</nav>
    <br>
<div class="container">
    <form action="/add/todo" class="d-flex" method="POST">
        <input type="text" name="todo" class="form-control" placeholder="Enter To-Do">
        <br>
        <button type="submit" class="btn btn-md btn-primary mx-2">Add Todo</button>
    </form>
    <ul class="list-group my-3">
        <form action="/delete/todo/:_id" method="post"></form>
        <% todo.forEach(todos =>{ %>
            <li class="list-group-item"><%= todos.todo %> <a href="/delete/todo/<%=todos._id%>" class="btn btn-md btn-danger" style="margin-left: 90%;" >Delete</a> </li>
            <% }) %>
      </ul>
</div>


<%- include("./partials/footer") %>